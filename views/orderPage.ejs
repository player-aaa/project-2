<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />

    <link href="/styles.css" rel="stylesheet" type="text/css" />
  </head>

  <style>
    body {
      background-image: url("https://images.unsplash.com/photo-1622046120199-32f27980473d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTZ8fGNhciUyMHNob3dyb29tfGVufDB8fDB8fA%3D%3D&w=1000&q=80");
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
      background-position: center;
    }
  </style>

  <title>Orders Page</title>
  <body>
    <div class="header">
      <h1 class="text-center mb-0"><a href="/home" class="link">Drive</a></h1>
    </div>
    <% if (orders.length === 0) { %>
    <div class="no-order d-flex align-items-center justify-content-center">
      <p class="mb-0 text-center">No existing order found</p>
    </div>
    <br />
    <% } else { %>
    <div class="table-responsive-sm">
      <table class="table-info table-striped table-hover mt-5">
        <tr class="text-center">
          <th scope="col" class="align-middle">Brand</th>
          <th scope="col" class="align-middle">Category</th>
          <th scope="col" class="align-middle">Start Date</th>
          <th scope="col" class="align-middle">End Date</th>
          <th scope="col" class="align-middle">Rental Cost</th>
          <th scope="col" class="align-middle">Actions</th>
        </tr>
        <% orders.forEach((element) => { %>
        <tr class="text-center">
          <td class="align-middle"><%= element.brand_name %></td>
          <td class="align-middle"><%= element.category_name %></td>
          <td class="align-middle"><%= element.start_date %></td>
          <td class="align-middle"><%= element.end_date %></td>
          <td class="align-middle">$<%= element.rental_cost %></td>
          <td class="align-middle">
            <div>
              <form
                action="/existingOrder/<%= element.order_id %>/edit"
                method="GET"
              >
                <input
                  type="hidden"
                  id="brand"
                  name="brand"
                  value="<%= element.brand_name %>"
                />
                <input
                  type="hidden"
                  id="category"
                  name="category"
                  value="<%= element.category_name %>"
                />
                <input
                  type="hidden"
                  id="startDate"
                  name="startDate"
                  value="<%= element.start_date %>"
                />
                <input
                  type="hidden"
                  id="endDate"
                  name="endDate"
                  value="<%= element.end_date %>"
                />
                <input
                  type="submit"
                  value="Edit"
                  class="btn-warning text-center my-1"
                />
              </form>
              <form
                action="/existingOrder/<%= element.order_id %>/delete?_method=DELETE"
                method="POST"
              >
                <input
                  type="submit"
                  value="Delete"
                  class="btn-danger text-center my-1"
                />
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
    <% } %>
    <br />
    <div class="d-flex justify-content-center">
      <form action="/home">
        <input type="submit" value="Return to main page" />
      </form>
    </div>
  </body>
</html>
